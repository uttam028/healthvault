<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"   xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<h3>Microphone Check</h3>
		<br/><br/>
		<g:HTMLPanel ui:field="startPanel">
			<h4>Be in a quiet place, speak sentences that will be visible, adjust microphone if required.</h4>
			<br/><br/>
			<b:Button size="LARGE" ui:field="buttonStart" type="PRIMARY">Click to Start</b:Button>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="recordingPanel">
			<b:Heading  size="H3" ui:field="recordingLabel"></b:Heading>
			<br/>
			<br/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="listeningPanel">
			<h4>Listen to the recording to ensure sound quality</h4>
			<br/><br/>
			<b:Button size="LARGE" ui:field="buttonListen" type="PRIMARY">Listen</b:Button>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="soundPanel">
			<img src="images/wave.png"/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="finalPanel">
			<h4>Is sound quality of the recording ok?</h4>
			<br/><br/>
			<b:Button size="LARGE" ui:field="buttonYes" type="SUCCESS">Yes</b:Button>
			<b:Button size="LARGE" ui:field="buttonNo" type="DANGER">No</b:Button>			
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 