<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
		.left_align{
		float:left;
		}
		.left_text{
		text-align:left;
		font-family: "Times New Roman", Times,
		serif;
		}
	
	</ui:style>
	<g:HTMLPanel>
		<h4>For any query, send message to us</h4>
	    <b:Form ui:field="messageForm">
			<b:FormGroup addStyleNames="col-lg-offset-3 col-lg-6">
				<b:FormLabel for="formSubject" addStyleNames="{style.left_align}">Subject</b:FormLabel>
				<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
				<b:TextBox b:id="formSubject" ui:field="textboxSubject" maxLength="100" allowBlank="false"/>
			</b:FormGroup>
			<h:Br />
			<b:FormGroup addStyleNames="col-lg-offset-3 col-lg-6">
				<b:FormLabel for="formMessagebody" addStyleNames="{style.left_align}">Message</b:FormLabel>
				<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
				<b:TextArea b:id="formMessagebody" ui:field="textareaMessage" maxLength="500" allowBlank="false"/>
			</b:FormGroup>
			
			<h:Br />
	
			<b:FormGroup addStyleNames="col-lg-offset-3 col-lg-6">
				<b:Button addStyleNames="{style.left_align}" type="INFO" size="LARGE" ui:field="sendButton">Send</b:Button>
				<b:Button addStyleNames="{style.left_align}" type="DANGER" ui:field="cancelButton" size="LARGE">Cancel</b:Button>
			</b:FormGroup>
		</b:Form>
	</g:HTMLPanel>
</ui:UiBinder> 