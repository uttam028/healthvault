<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<b:Container fluid="true">
			<b:Row>
				<b:Navbar>
					<b:NavbarForm>
						<b:Heading size="H1" text="Your Speech, Your Health" addStyleNames="col-lg-10"/>
					</b:NavbarForm>
				</b:Navbar>
			</b:Row>
		</b:Container>
		<div>
			<br />
			<br />
			<br />
			<br/>
		</div>
		<b:Form type="HORIZONTAL" addStyleNames="col-lg-offset-6 col-lg-3" ui:field="formLogin">
			<b:FieldSet>
				<b:Legend>Login</b:Legend>
				<g:Label ui:field="labelLoginError" styleName="labelError"></g:Label>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">Email</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:TextBox b:id="formName" ui:field="textLoginEmail" maxLength="30"/>
						<g:Label ui:field="labelLoginEmailFormatError" styleName="labelError"></g:Label>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">Password</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:Input type="PASSWORD" b:id="formName" ui:field="textLoginPassword" maxLength="30"/>
						<g:Label ui:field="labelLoginPasswordError" styleName="labelError"></g:Label>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<g:FlowPanel addStyleNames="col-lg-offset-9 col-lg-3">
						<b:Button ui:field="buttonLoginAction">Log in</b:Button>
					</g:FlowPanel>
				</b:FormGroup>
				
				<b:FormGroup>
					<b:Button type="LINK" addStyleNames="col-lg-offset-2.5">Can't access account</b:Button>
					<h:Span>|</h:Span>
					<b:Button type="LINK" ui:field="buttonCreateAccount">Create New Account</b:Button>
				</b:FormGroup>
			</b:FieldSet>
		</b:Form>
		<b:Form type="HORIZONTAL" addStyleNames="col-lg-offset-6 col-lg-3" ui:field="formSignup">
			<b:FieldSet>
				<b:Legend>Signup Form</b:Legend>
				<g:Label ui:field="labelSignupError" styleName="labelError"></g:Label>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">First Name</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:TextBox b:id="formName" ui:field="textFirstName" maxLength="20"/>
						<g:Label ui:field="labelFirstNameError" styleName="labelError"></g:Label>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">Last Name</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:TextBox b:id="formName" ui:field="textLastName" maxLength="20"/>
						<g:Label ui:field="labelLastNameError" styleName="labelError"></g:Label>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">Email</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:TextBox b:id="formName" ui:field="textSignupEmail" maxLength="30"/>
						<g:Label ui:field="labelSignupEmailFormatError" styleName="labelError"></g:Label>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">Password</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:Input type="PASSWORD" b:id="formName" ui:field="textSignupPassword" maxLength="30"/>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-4">Confirm Password</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-8">
						<b:Input type="PASSWORD" b:id="formName" ui:field="textConfirmPassword" maxLength="30"/>
						<g:Label ui:field="labelPasswordMatchError" styleName="labelError"></g:Label>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<g:FlowPanel addStyleNames="col-lg-offset-9 col-lg-3">
						<b:Button ui:field="buttonSignupAction">Signup</b:Button>
					</g:FlowPanel>
				</b:FormGroup>
				<b:Button type="LINK" ui:field="buttonAlreadyAccount">Already have an account</b:Button>
			</b:FieldSet>
		</b:Form>


	</g:HTMLPanel>
</ui:UiBinder> 