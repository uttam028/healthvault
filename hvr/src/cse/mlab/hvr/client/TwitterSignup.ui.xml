		<b:Jumbotron addStyleNames="banner_color jumbo_height {style.bottom_zero}">
			<b:Row>
				<b:Column size="MD_2">
					<b:Image url="template/images/ndcrest.png" addStyleNames="jumbo_fraction_three_fourth"></b:Image>
				</b:Column>
				<b:Column size="MD_8">
					<g:Label addStyleNames="{style.white} h2">Speech Marker
						Initiative</g:Label>
					<!--h:Paragraph addStyleNames="banner_text_color h2">Speech Marker Initiative</h:Paragraph -->
					<!--h:Paragraph addStyleNames="banner_text_color">A research project run by University of Notre Dame and funded by 
					National Science Foundation</h:Paragraph-->
					<h:Paragraph addStyleNames="banner_text_color">A speech data repository for healthcare research at the University of Notre Dame</h:Paragraph>
				</b:Column>
				<b:Column size="MD_2">
					<b:Image url="template/images/nsfcrest.png" addStyleNames="jumbo_fraction_three_fourth"></b:Image>
				</b:Column>
			</b:Row>
		</b:Jumbotron>
