	<ui:style>
	.left {
		text-align: left;
	}
	
	.center {
		float: none;
		display: inline-block;
	}
	
	.bottom_zero {
		margin-bottom: 0;
	}
	
	.white {
		color: white;
		font-size: 60px;
	}
	
	.login_back {
		/*color:#F0FFFF;
		background-color: #8FBC8F;*/
		background-color: #9fc69f;
	}
	.curve{
		border-radius: 5px;
	}
	
	</ui:style>
