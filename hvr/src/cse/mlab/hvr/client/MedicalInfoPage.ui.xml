<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.important {
		font-weight: bold;
		}
		.left_align{
		float:left;
		}
		.left_text{
		text-align:left;
		font-family: "Times
		New Roman", Times,
		serif;
		}

	</ui:style>
	<g:HTMLPanel>
		<h4>Medical Information</h4>
		<b:Panel>
			<b:PanelHeader>
				<b:Heading size="H3" text="History" addStyleNames="{style.left_text}" />
			</b:PanelHeader>
			<b:PanelBody>
				<h:Br />
				<g:VerticalPanel addStyleNames="col-lg-10">
					<b:FormLabel for="formSpeechDis" addStyleNames="{style.left_align}">Have you
						been diagnosed with a speech/language disorder?</b:FormLabel>
					<g:HorizontalPanel addStyleNames="{style.left_align}">
						<b:InlineRadio name="radio1" formValue="value1"
							text="Yes" />
						<b:InlineRadio name="radio1" formValue="value2"
							text="No" />
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<h:Br />
				<h:Br />
				<h:Br />

				<b:FormGroup>
					<b:FormLabel for="formSpeechDis" addStyleNames="{style.left_align}">Have you
						been diagnosed with a neurological disorder?</b:FormLabel>
					<g:HorizontalPanel addStyleNames="col-lg-offset-1 col-lg-9 {style.left_align}">
						<b:CheckBox text="ALS" />
						<b:CheckBox text="Parkinsons" />
						<b:CheckBox text="Huntington" />
						<b:CheckBox text="Stroke" />

					</g:HorizontalPanel>
					<g:HorizontalPanel addStyleNames="col-lg-offset-1 col-lg-9 {style.left_align}">
						<b:CheckBox text="Alzheimer" />
						<b:CheckBox text="Vascular Disease" />
						<b:CheckBox text="TBI" />
						<b:CheckBox text="Multiple Sclerosis" />

					</g:HorizontalPanel>
				</b:FormGroup>
				<h:Br />
				<h:Br />
				<h:Br />
				<h:Br />
				<b:FormGroup addStyleNames="col-lg-8">
					<b:Button addStyleNames="{style.left_align}" type="SUCCESS">Update</b:Button>
				</b:FormGroup>

			</b:PanelBody>
		</b:Panel>
		
	</g:HTMLPanel>
</ui:UiBinder> 