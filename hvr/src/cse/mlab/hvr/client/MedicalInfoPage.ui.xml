<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.left_align{
			float:left;
		}
		.left_text{
			text-align:left;
			font-family: "Times New Roman", Times, serif;
		}
		.right_margin{
			margin-right: 40px;
		}
		
		.diag_panel_bck_color{
			color: #c9d7e8;
		}
		.text_font{
			font-size: 100%;
		}

	</ui:style>
	<g:HTMLPanel>
	    <g:HTMLPanel ui:field="resultPanel">
	        
	    </g:HTMLPanel>
	
		<h4>Medical Information</h4>
		<br/>
		<b:Panel type="INFO" addStyleNames="{style.text_font}">
			<b:PanelHeader>
				<b:Heading size="H3" text="Diagnosis" addStyleNames="{style.left_text}" />
			</b:PanelHeader>
			<b:PanelBody>
				<g:HTMLPanel ui:field="diagnosisPanel"/>
			</b:PanelBody>
		</b:Panel>
		<br/>
		<b:Panel type="SUCCESS" addStyleNames="{style.text_font}">
			<b:PanelHeader addStyleNames="{style.diag_panel_bck_color}">
				<b:Heading size="H3" text="Medication" addStyleNames="{style.left_text}" />
			</b:PanelHeader>
			<b:PanelBody>
				<g:HTMLPanel ui:field="medicationPanel"/>
			</b:PanelBody>
		</b:Panel>
		
	</g:HTMLPanel>
</ui:UiBinder> 