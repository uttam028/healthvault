<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.important {
		font-weight: bold;
		}
		.left_align{
		float:left;
		}
		.left_text{
		text-align:left;
		font-family: "Times New Roman", Times,
		serif;
		}

	</ui:style>
	<g:HTMLPanel>
		<h4>Account Information</h4>
		<b:Panel>
			<b:PanelHeader>
				<b:Heading size="H3" text="Change Passowrd" addStyleNames="{style.left_text}" />
			</b:PanelHeader>
			<b:PanelBody>
				<b:FormGroup addStyleNames="col-lg-8">
					<b:FormLabel for="formOldPass" addStyleNames="{style.left_align}">Old
						Password</b:FormLabel>
					<b:Input type="PASSWORD" b:id="formOldPass" />
				</b:FormGroup>
				<h:Br />
				<b:FormGroup addStyleNames="col-lg-8">
					<b:FormLabel for="formNewPass" addStyleNames="{style.left_align}">New Password</b:FormLabel>
					<b:Input type="PASSWORD" b:id="formNewPass" />
				</b:FormGroup>
				<h:Br />
				<b:FormGroup addStyleNames="col-lg-8">
					<b:FormLabel for="formConfirmPass" addStyleNames="{style.left_align}">Confirm New Password</b:FormLabel>
					<b:Input type="PASSWORD" b:id="formConfirmPass" />
				</b:FormGroup>
				<h:Br />

				<b:FormGroup addStyleNames="col-lg-8">
					<b:Button addStyleNames="{style.left_align}" type="SUCCESS">Update Password</b:Button>
				</b:FormGroup>
			</b:PanelBody>
		</b:Panel>
	</g:HTMLPanel>
</ui:UiBinder> 