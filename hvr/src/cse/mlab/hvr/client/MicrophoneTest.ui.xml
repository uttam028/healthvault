<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.important {
		font-weight: bold;
		}

   		 #canvas {
        	margin-left: auto;
        	margin-right: auto;
        	display: block;
        	background-color: white;
        	box-shadow: 5px 5px 5px #888888;
    	}
    	#controls {
        	text-align: center;
    	}
    	#start_button, #stop_button {
    	    outline:0;
    	}

	</ui:style>
	<g:HTMLPanel ui:field="microphoneTestPanel">
		<g:Label ui:field="instructionText">Connect headphone, click start and speak anything clearly</g:Label>
		<b:Row>
			<b:Column size="MD_6">
				<h:Br />
				<h:Br />
				<g:HTMLPanel ui:field="timerPanel"></g:HTMLPanel>
			</b:Column>
			<b:Column size="MD_6">
				<b:Row>
					<b:Column size="MD_1">
						<g:HTMLPanel ui:field="instructionPanel" >
						    <br/>
						    <br/>
						    <input type="checkbox" class="myClass" value="no" id="answer" name="answer" data-label="Permission" addStyleNames="margin_left"/>
							<br/>
							<input type="checkbox" class="myClass" value="no" id="second" name="second" data-label="Level" addStyleNames="margin_left"/>
							<!-- b:CheckBox text="Permission" ></b:CheckBox>
							<b:CheckBox text="Levelfieuohkhkjhkj"></b:CheckBox-->
						</g:HTMLPanel>

					</b:Column>
					<h:Br />
				</b:Row>
			</b:Column>
		</b:Row>
		<!--canvas id="canvas" width="800" height="256"></canvas-->
		<p></p>
		
	</g:HTMLPanel>
</ui:UiBinder> 