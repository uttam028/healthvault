<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.left{
			text-align:left;
		}
		.center{
			float:none;
			display: inline-block;
		}
		.half{
			width:40%;
			height:40%;
		}
		.banner_white{
			color:white;
			font-size: 45px;
		}
		.top_down_space{
			margin-top:.5em;
			margin-bottom:.25em;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainpagePanel">
		<g:HTMLPanel addStyleNames="banner_color">
			<b:Row>
				<b:Column size="MD_2">
 					<b:Image url="template/images/ndcrest.png" addStyleNames="{style.half}"></b:Image>
				</b:Column> 
				<b:Column size="MD_8">
					<g:Label addStyleNames="{style.banner_white}  {style.top_down_space}">Speech Marker
						Initiative</g:Label>
					<h:Paragraph addStyleNames="banner_text_color">A speech data repository for healthcare research at the University of Notre Dame</h:Paragraph> 
				</b:Column>
				<b:Column size="MD_2">
					<b:Image url="template/images/nsfcrest.png" addStyleNames="{style.half}"></b:Image>
				</b:Column> 
			</b:Row>
		</g:HTMLPanel>
		<b:Navbar addStyleNames="container-fluid">
			<b:NavbarCollapse>
				<b:NavbarNav ui:field="navbar">
					<b:AnchorListItem ui:field="homeAnchor"  pull="LEFT">Home</b:AnchorListItem>
					<b:AnchorListItem ui:field="profileAnchor">Profile</b:AnchorListItem>
					<b:AnchorListItem ui:field="adminAnchor">Admin</b:AnchorListItem>
					<b:AnchorListItem ui:field="researcherAnchor">Research</b:AnchorListItem>
					<b:AnchorListItem ui:field="contactAnchor">Contact</b:AnchorListItem>
				</b:NavbarNav>
				
				<b:NavbarNav pull="RIGHT">
					<b:AnchorListItem ui:field="signoutAnchor">Sign Out</b:AnchorListItem>
				</b:NavbarNav>
			</b:NavbarCollapse>
		</b:Navbar>


		<g:HTMLPanel ui:field="mainPageContentPanel">

		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 