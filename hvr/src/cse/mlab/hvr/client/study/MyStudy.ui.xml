<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.important {
		font-weight: bold;
		}
		.margin{
		bottom-margin:5%;
		}
		.zero_margin{
		margin:0%;
		}
		.text_left{
		text-align: left;
		}
		.text_center{
		text-align: center;
		}
		.margin_bottom{
		margin-bottom: 10%;
		}


	</ui:style>

	<g:HTMLPanel addStyleNames=" {style.margin_bottom} panel_border {style.text_left} ">
		<g:HTMLPanel ui:field="headerPanel" addStyleNames="panel_border">
			<b:Heading ui:field="studyHeading" size="H4" addStyleNames="col-lg-offset-1"></b:Heading>
		</g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.text_center}">
			<b:Column size="MD_6" addStyleNames="back_color panel_border"
				ui:field="statusColumn">
				<g:HTMLPanel ui:field="statusPanel">
					<b:Button type="LINK" size="LARGE">Status</b:Button>
				</g:HTMLPanel>
			</b:Column>
			<b:Column size="MD_6" addStyleNames="panel_border" ui:field="aboutColumn">
				<g:HTMLPanel ui:field="aboutPanel">
					<b:Button type="LINK" size="LARGE">About</b:Button>
				</g:HTMLPanel>
			</b:Column>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="statusContentPanel" addStyleNames="col-lg-offset-2">
			<br />
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="aboutContentPanel">
		</g:HTMLPanel>
		<hr />
		<g:HTMLPanel>
			<b:Button ui:field="participateButton" type="SUCCESS"
				addStyleNames="col-lg-offset-5">Participate</b:Button>
			<br/>
			<br/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 